<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_register_tutor_extra"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:focusableInTouchMode="true"
    tools:context="fi.tutee.tutee.register.RegisterFragment">

    <android.support.v7.widget.AppCompatSpinner
        android:id = "@+id/registerCountrySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/register_spinner_padding" />

    <android.support.v7.widget.AppCompatSpinner
        android:id = "@+id/registerCitySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/register_spinner_padding"/>

    <ListView
        android:id="@+id/register_extra_subjects"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <EditText
        android:id = "@+id/registerTutorExtraDescription"
        android:hint="Description"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/registerTutorExtraButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "Register"/>

</LinearLayout>