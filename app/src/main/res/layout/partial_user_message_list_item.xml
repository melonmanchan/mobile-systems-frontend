<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/partial_message_wrapper"
    android:background="?attr/selectableItemBackground"
    android:padding="8dp"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="100dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_weight="0.1"
        android:layout_gravity="center"
        android:padding="3dp"
        android:id="@+id/partial_message_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        />

    <LinearLayout
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:layout_height="70dp"
        android:layout_marginTop="10dp">

        <TextView
            android:textStyle="bold"
            android:text="Hemmo hemmo"
            android:id="@+id/partial_message_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="hiio hoi"
            android:id="@+id/partial_message_content"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="70dp">
        <TextView
            android:text="2h"
            android:id="@+id/partial_message_last_sent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>