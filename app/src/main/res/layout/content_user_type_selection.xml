<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:id="@+id/content_user_type_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="fi.tutee.tutee.usertypeselection.UserTypeSelectionActivity"
    android:weightSum="1">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/action_bar_title"
        android:text="Tutee"
        android:src="@drawable/owl_icon2"
        android:textColor="#ffffff"
        android:layout_marginBottom="-50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            fontPath="fonts/cherry-and-kisses.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am a..."
            android:textSize="60dp"
            android:textColor="#fff"/>

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/userTypeSelectionTutor"
                android:layout_width="fill_parent"
                android:layout_height= "@dimen/registerButtonHeight"
                android:text="Tutor"
                android:theme="@style/ButtonOnBackground"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or a"
                android:textColor="#fff"
                android:textSize="24sp" />

            <Button
                android:id="@+id/userTypeSelectionTutee"
                android:layout_width="fill_parent"
                android:layout_height ="@dimen/registerButtonHeight"
                android:text="Student"
                android:layout_toEndOf="@+id/userTypeSelectionTutor"
                android:theme="@style/ButtonOnBackground"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>


