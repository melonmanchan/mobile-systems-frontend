<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_user_type_selection"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="fi.tutee.tutee.usertypeselection.UserTypeSelectionActivity"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am a..."
        android:textSize="24sp"
        android:textColor="#fff"/>

    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/userTypeSelectionTutor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Tutor"
            android:theme="@style/ButtonOnBackground"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or a"
            android:textColor="#fff"
            android:textSize="24sp" />

        <Button
            android:id="@+id/userTypeSelectionTutee"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Student"
            android:layout_toEndOf="@+id/userTypeSelectionTutor"
            android:theme="@style/ButtonOnBackground"/>

    </LinearLayout>
</LinearLayout>


